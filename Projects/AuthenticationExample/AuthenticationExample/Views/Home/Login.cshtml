
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@functions{

    public string MakeItUpper(string input)
    {
        return input.ToUpper();
    }

}
<form action="/Home/VerifyCredential" method="post">
    <div>
        <label>@MakeItUpper("Username")</label>
        <input type="text" id="userName" name="userName" />
    </div>
    <div>
        <label>@MakeItUpper("Password")</label>
        <input type="password" id="password" name="password" />
    </div>
    <div>
        <button type="submit">Submit</button>
    </div>
</form>